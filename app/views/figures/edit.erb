<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
<input type="hidden" name="_method" value="PATCH">

<label>Name</label>
<input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

<br></br>
<label> Titles </label>
<% Title.all.each do |title| %>
   <%= title.name %>
   <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>> <br></br>
<% end %>

<br>

<label> Landmarks </label>
<% Landmark.all.each do |landmark|%>
   <%= landmark.name %>
   <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>> <br></br>
<% end %>

<label>Create a new landmark</label>
<br>
<label>Name:</label>
<input type="text" id="new_landmark" name="landmark[name]">
<label>Year Completed:</label>
<input type="text" id="year_completed" name="landmark[year_completed]">

<input type="submit" value="Edit Figure"> 

</form>
